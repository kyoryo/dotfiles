" enable mouse support "
set mouse=a
" enable syntax "
syntax on

set clipboard+=unnamedplus

set number
set relativenumber

set hlsearch

" disable bell sound "
set belloff=all

set ignorecase
set smartcase

" width of tab character "
set tabstop=4
" fine tunes the amount of whitespace added "
set softtabstop=4
" determines the amount of whitespace t add in normal mode "
set shiftwidth=4
" max column "
set textwidth=120
" use space instead of tab "
set expandtab
set autoindent
set smartindent

set laststatus=2

"if !has('gui_running')
"	set t_Co=256
"endif
"set termguicolors
"colorscheme pablo"
